@model Contract_Monthly_Claim_System_CMCS.Models.login
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.PageTitle</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <!-- Navigation -->
    <nav class="navigation">
        <h3>Contract Monthly Claim System</h3>
        <div class="nav-links">
            <a href="@Url.Action("Index", "Home")">Home</a>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container">
        <div class="login">
            <div class="login-header">
                <h2>WELCOME!</h2>
                <p>Sign in to access your account</p>
            </div>

            @if (ViewBag.SuccessMessage != null)
            {
                <div class="alert alert-success">
                    @ViewBag.SuccessMessage
                </div>
            }

            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-error">
                    @ViewBag.ErrorMessage
                </div>
            }

            @if (ViewBag.ValidationErrors != null)
            {
                <div class="alert alert-error">
                    <ul>
                        @foreach (var error in ViewBag.ValidationErrors)
                        {
                            <li>@error</li>
                        }
                    </ul>
                </div>
            }

            <form asp-action="Login" method="post">
                <div class="form-group">
                    <label for="reg-email">Email Address</label>
                    <input type="email" asp-for="Email_Address" id="reg-email" class="form-control" placeholder="Enter your email">
                    <span asp-validation-for="Email_Address" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" asp-for="Password" id="password" class="form-control" placeholder="Enter your password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="role">Role</label>
                    <select asp-for="Role" id="role" class="form-control">
                        <option value="">Select your role</option>
                        <option value="lecturer">Lecturer</option>
                        <option value="pc">Program Coordinator</option>
                        <option value="admin">Academic Manager</option>
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-block">Login</button>

                <div class="auth-link">
                    <p>Not registered? <a href="@Url.Action("Index", "Home")">REGISTER here</a></p>
                </div>
            </form>
        </div>
    </main>

    <footer>
        <div class="footer-content">
            <p>&copy; 2025</p>
        </div>
    </footer>

</body>
</html>
